<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 小组件权限 -->
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    <uses-permission android:name="android.permission.UPDATE_APP_WIDGET" />
    
    <!-- 网络权限（如果需要） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 存储权限（用于SharedPreferences） -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application>

        <!-- 小组件Provider -->
        <receiver android:name="com.zher.meow.widget.DigiAnimalWidgetProvider"
            android:exported="true"
            android:label="Miao屋桌面宠物">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <!-- 自定义动画播放Action -->
                        <action android:name="com.zher.meow.widget.PLAY_ANIMATION" />
                        <action android:name="com.zher.meow.widget.REFRESH_WIDGET" />
                        <action android:name="com.zher.meow.widget.REFRESH_DATA" />
                        <action android:name="com.zher.meow.widget.WIDGET_PINNED" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/digianimal_widget_info" />
        </receiver>

        <!-- 小组件数据更新服务 -->
        <service android:name="com.zher.meow.widget.WidgetUpdateService"
            android:exported="false" />


    </application>

</manifest>